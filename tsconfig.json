{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "dom.iterable", "esnext", "es2015"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false, // Set to false to allow emitting compiled JS files
    "outDir": "./dist", // Specify output directory for Express server
    "esModuleInterop": true,
    "module": "commonjs", // Use CommonJS for Node.js compatibility
    "moduleResolution": "node", // Change to 'node' for better compatibility with Node.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"] // Adjust if your source structure changes
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "server.ts", // Include your Express server file
    "src/**/*" // Adjusted to include all TypeScript files in the src folder
  ],
  "exclude": [
    "node_modules",
    "dist", // Exclude output directory
    ".next" // Exclude Next.js build output
  ]
}
